                                <TextBlock Foreground="Black" FontSize="20" FontWeight="Bold" />
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>-->
                    <Button x:Name="btnAccept2"  Background="#3DA5E1" Grid.Row="1" Content="Xác Nhận" Click="btnAccept2_Click" />

                </Grid>
            </phone:PivotItem>
        </phone:Pivot>
    </Grid>

</phone:PhoneApplicationPage>